<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fuppy.fuppyandroid.MainActivity"
    android:background="@drawable/back_ground">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp">
        <RadioGroup
            android:id="@+id/radiogroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" >
        <RadioButton
            android:id="@+id/search_dog"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Dog"
            android:textSize="17dp"
            android:theme="@style/Radio"
            android:textColor="@android:color/white"/>

        <RadioButton
            android:id="@+id/search_cat"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Cat"
            android:textSize="17dp"
            android:theme="@style/Radio"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/search_other"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Other"
            android:textSize="17dp"
            android:theme="@style/Radio"
            android:textColor="@android:color/white"
            android:layout_marginRight="10dp"/>
</RadioGroup>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="40dp">
        <CheckBox
            android:id="@+id/search_male"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Male"
            android:textSize="17dp"
            android:theme="@style/Radio"
            android:textColor="@android:color/white"/>

        <CheckBox
            android:id="@+id/search_female"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Female"
            android:textSize="17dp"
            android:theme="@style/Radio"
            android:textColor="@android:color/white"/>

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">

        <CheckBox
            android:id="@+id/search_baby"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Baby"
            android:textSize="17dp"
            android:theme="@style/Radio"
            android:textColor="@android:color/white"/>

        <CheckBox
            android:id="@+id/search_young"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Young"
            android:textSize="17dp"
            android:theme="@style/Radio"
            android:textColor="@android:color/white"/>

        <CheckBox
            android:id="@+id/search_adult"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Adult"
            android:textSize="17dp"
            android:theme="@style/Radio"
            android:textColor="@android:color/white"/>

        <CheckBox
            android:id="@+id/search_senior"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Senior"
            android:textSize="17dp"
            android:theme="@style/Radio"
            android:textColor="@android:color/white"/>
    </TableRow>


    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp">

        <CheckBox
            android:id="@+id/search_s"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="S"
            android:textSize="17dp"
            android:theme="@style/Radio"
            android:textColor="@android:color/white"/>

        <CheckBox
            android:id="@+id/search_m"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="M"
            android:textSize="17dp"
            android:layout_weight="1"
            android:theme="@style/Radio"
            android:textColor="@android:color/white"/>

        <CheckBox
            android:id="@+id/search_l"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="L"
            android:textSize="17dp"
            android:theme="@style/Radio"
            android:textColor="@android:color/white"/>

        <CheckBox
            android:id="@+id/search_xl"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="XL"
            android:textSize="17dp"
            android:layout_weight="1"
            android:theme="@style/Radio"
            android:textColor="@android:color/white"/>

    </TableRow>


    <Button
        android:text="Find Your Pet"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:background="@drawable/buttonshape"
        android:id="@+id/login"
        android:layout_marginTop="70dp"/>


</TableLayout>
